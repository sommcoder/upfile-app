{% schema %}
  {
    "name": "File Viewer",
    "target": "section",
    "javascript": "dropzone.js",
    "stylesheet": "fileviewer.css",
    "enabled_on": {
      "templates": ["product"]
    },
    "settings": [
      {
        "type": "text",
        "id": "default-text",
        "label": "Default Text",
        "default": "Drag and Drop Files Here"
      }, {
        "type": "color",
        "id": "default-border-colour",
        "label": "Default Border Colour",
        "default": "#201e1e"
      }, {
        "type": "checkbox",
        "id": "dotted-border",
        "label": "Dotted Border",
        "default": true
      }, {
        "type": "text",
        "id": "drag-error-message",
        "label": "Drag Error Message",
        "default": "Oops.. this isn't a valid file"
      }
    ]
  }
{% endschema %}