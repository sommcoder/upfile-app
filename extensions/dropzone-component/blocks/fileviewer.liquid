</span>

{% schema %}
  {
    "name": "Fileviewer Block",
    "target": "section",
    "javascript": "block.js",
    "stylesheet": "fileviewer.css",
    "enabled_on": {
      "templates": ["product"]
    },
    "settings": [
      {
        "type": "color",
        "id": "primary-color",
        "label": "Primary File Colour",
        "default": "#3d3d3d"
      }, {
        "type": "color",
        "id": "secondary-color",
        "label": "Secondary File Colour",
        "default": "#535353"
      }, {
        "type": "color",
        "id": "font-color",
        "label": "Icon Font Colour",
        "default": "#FFFFFF"
      }
    ]
  }
{% endschema %}